<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- màn hình login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.expensetracker.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <!-- chuyển sang Home (xóa Login khỏi BackStack để không quay lại được) -->
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <!-- sang register screen -->
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- màn hình register -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.expensetracker.ui.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <!-- back về login sau tạo acc -->
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- dashboard -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.expensetracker.ui.home.HomeFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_home">

        <!-- sang add expense -->
        <action
            android:id="@+id/action_home_to_add"
            app:destination="@id/addExpenseFragment" />

        <!-- chuyển sang tab stats -->
        <action
            android:id="@+id/action_home_to_stats"
            app:destination="@id/statsFragment" />

        <!-- chuyển sang tab bill -->
        <action
            android:id="@+id/action_home_to_bills"
            app:destination="@id/billsFragment" />

        <!-- chuyển sang tab settings -->
        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- expense/income screen -->
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.example.expensetracker.ui.add_expense.AddExpenseFragment"
        android:label="Add Expense"
        tools:layout="@layout/fragment_add_expense" />

    <!-- chart thống kê -->
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.example.expensetracker.ui.stats.StatsFragment"
        android:label="Financial Analysis"
        tools:layout="@layout/fragment_stats" />

    <!-- danh sách bill -->
    <fragment
        android:id="@+id/billsFragment"
        android:name="com.example.expensetracker.ui.bills.BillsFragment"
        android:label="Upcoming Bills"
        tools:layout="@layout/fragment_bills">

        <!-- add bill mới -->
        <action
            android:id="@+id/action_bills_to_addBill"
            app:destination="@id/addBillFragment" />
    </fragment>

    <!-- screen add bill mới -->
    <fragment
        android:id="@+id/addBillFragment"
        android:name="com.example.expensetracker.ui.bills.AddBillFragment"
        android:label="Add Bill Reminder"
        tools:layout="@layout/fragment_add_bill" />

    <!-- settings screen -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.expensetracker.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>